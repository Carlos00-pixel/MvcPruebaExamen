@model Usuario

<h1 style="color: blueviolet">Log In User</h1>

<form method="post">

    <label>Email</label>
    <input type="text" name="email" class="form-control" />

    <label>Password</label>
    <input type="text" name="password" class="form-control" />

    <button class="btn btn-info">
        Login
    </button>
</form>
<h1 style="color:green">
    @ViewData["MENSAJE"]
</h1>

@if (Model != null)
{
    <h1>Bienvenido a tu pagina, @Model.Nombre</h1>
    <h1 style="color:darkorange">Email: @Model.Email</h1>
    <img src="@Model.Imagen" style="width: 150px; height: 150px;" />
}